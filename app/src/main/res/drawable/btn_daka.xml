<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="false">
        <shape>

            <gradient
                android:startColor="#801074a3"
                android:endColor="#801074a3"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#f0faff" />
            <corners
                android:radius="10dp" />/>
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#1074a3"
                android:endColor="#1074a3"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#f0faff" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#1074a3"
                android:endColor="#1074a3"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#f0faff" />
            <corners
                android:radius="10dp" />

        </shape>
    </item>
</selector>